@{
    ViewBag.Title = "after_login";
}

@section changePass
{
    @model EAD_Term_Project.Models.Admin
    <head>
        <title>Change Password</title>
        <script src="../../Content/jquery-1.8.0.js"></script>
        <script>

         $(document).ready(function () 
         {
             $("#oldPass").blur(function ()
             {
                
                 var old = $("#oldPass").val();
                 
                 $.getJSON("/Admin/CheckAdminPassword?oldPass=" + old, function (data)
                 {
                     if (data == false)
                     {
                         $("#errorMessage").text("Enter Correct Old Password");
                         
                     }
                     else {
                         $("#errorMessage").text("");
                     }
                 });

             });
             $("form").submit(function (e)
             {
                 if ($("#errorMessage").val() != "")
                 {
                     e.preventDefault();
                 }
                
                
             });
        });

</script>
    </head>
}
  

<div class="row">
    <div class="col-md-3" id="partial">
          <script>
              $("#partial").load("/Default1/SideView", "d1");
        </script>
    </div>
         <p class="h1" style="font-size:100px ; font-family:Batang ; text-align:center">Welcome Admin</p> 
        

    <form action="saveNewAdminPassword" method="post">

       <div style="margin-left:40% ; font-size:x-large">
    <br/>
        
        
           <table style="margin-left:10% ; font-size:x-large">
              
           
       <tr><td><label ">Old</label> @Html.LabelFor(m=>m.Password)&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>
           <td><br /><input type="text" name="oldPass" id="oldPass" class = "form-control"/>
               <div id="errorMessage" style="font-weight:bolder ; color:yellow"></div>
               <br/>
                
           </td></tr>

           <tr><td>
         <label>New Password</label> &nbsp&nbsp&nbsp&nbsp
           </td>
      <td><br /><input type="text" name="newPass" class = "form-control" /><br/>

           </td></tr></table>
            </div>  
        <input type="submit" class="btn btn-success" value="Change Password" style="margin-top:2%;margin-left:30%" value="Change Password" />
        
        <br />
         
</form>

    </div>
